<Window x:Class="TourFirm.Windows.TourWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TourFirm.Windows"
        mc:Ignorable="d"
        Title="TourWindow" MinHeight="600" MinWidth="1200">
    <Grid>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center" Width="170" Margin="0,570,0,0">
            <Button Content="Корзина" x:Name="Button_Open_TourCart" Click="Button_Open_TourCart_Click"/>
        </StackPanel>

        <ListView ScrollViewer.HorizontalScrollBarVisibility="Hidden" x:Name="ListView_Tours" HorizontalAlignment="Center">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Vertical" HorizontalAlignment="Center"></WrapPanel>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>



            <ListView.ItemTemplate>
                <DataTemplate>

                    <StackPanel Orientation="Horizontal" Width="1000">
                        <Border BorderBrush="LightSlateGray" BorderThickness="2" Margin="10">
                            <Image
                                Width="250"
                                Source="{Binding TourImageFromResources}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                            </Image>
                        </Border>

                        <StackPanel Orientation="Horizontal" Width="400">
                            <Border BorderBrush="Aqua" BorderThickness="2" Margin="10">
                                <Button Content="Добавить тур"  x:Name="Button_Add_Tour" Click="Button_Add_Tour_Click"></Button>
                            </Border>
                        </StackPanel>


                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Name}" FontSize="20"></TextBlock>
                            <TextBlock Text="{Binding DollarPrice}"></TextBlock>
                        </StackPanel>


                        <TextBlock Text="{Binding Description}" TextWrapping="Wrap"></TextBlock>



                    </StackPanel>

                </DataTemplate>

            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
